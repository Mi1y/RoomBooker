@model Booking
@{
    ViewData["Title"] = "Edit Booking";
}

<h2>Edit Booking</h2>
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="CustomerId" class="form-label"></label>
                <select asp-for="CustomerId" asp-items="ViewBag.CustomerId" class="form-select"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RoomId" class="form-label"></label>
                <select asp-for="RoomId" asp-items="ViewBag.RoomId" class="form-select"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateFrom" class="form-label"></label>
                <input asp-for="DateFrom" class="form-control" type="date" />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateTo" class="form-label"></label>
                <input asp-for="DateTo" class="form-control" type="date" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>