@model Booking
@{
    ViewData["Title"] = "Booking Details";
    var nights = Model.DateTo.HasValue && Model.DateFrom.HasValue
        ? Model.DateTo.Value.DayNumber - Model.DateFrom.Value.DayNumber : 0;
}

<h2>Booking Details</h2>
<dl class="row">
    <dt class="col-sm-3">Customer</dt>
    <dd class="col-sm-9">@Model.Customer?.Name</dd>
    <dt class="col-sm-3">Room</dt>
    <dd class="col-sm-9">@Model.Room?.RoomNumber (@Model.Room?.Type)</dd>
    <dt class="col-sm-3">Check-in</dt>
    <dd class="col-sm-9">@Model.DateFrom?.ToShortDateString()</dd>
    <dt class="col-sm-3">Check-out</dt>
    <dd class="col-sm-9">@Model.DateTo?.ToShortDateString()</dd>
    <dt class="col-sm-3">Duration</dt>
    <dd class="col-sm-9">@nights nights</dd>
    @if (Model.Room != null)
    {
        <dt class="col-sm-3 fw-bold">Total Cost</dt>
        <dd class="col-sm-9 fw-bold text-success">@((Model.Room.PricePerNight * nights).ToString("C"))</dd>
    }
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>