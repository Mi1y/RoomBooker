@model Room
@{
    ViewData["Title"] = "Delete Room";
}

<h2 class="text-danger">Delete Room</h2>
<p>Are you sure you want to delete this room?</p>
<dl class="row">
    <dt class="col-sm-3">Room Number</dt>
    <dd class="col-sm-9">@Model.RoomNumber</dd>
    <dt class="col-sm-3">Type</dt>
    <dd class="col-sm-9">@Model.Type</dd>
    <dt class="col-sm-3">Price Per Night</dt>
    <dd class="col-sm-9">@Model.PricePerNight.ToString("C")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>