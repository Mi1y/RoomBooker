@model Room
@{
    ViewData["Title"] = "Room Details";
}

<h2>Room Details</h2>
<dl class="row">
    <dt class="col-sm-3">Room Number</dt>
    <dd class="col-sm-9">@Model.RoomNumber</dd>
    <dt class="col-sm-3">Type</dt>
    <dd class="col-sm-9">@Model.Type</dd>
    <dt class="col-sm-3">Price Per Night</dt>
    <dd class="col-sm-9">@Model.PricePerNight.ToString("C")</dd>
</dl>

<h4>Bookings (@Model.Bookings.Count)</h4>
@if (Model.Bookings.Any())
{
    <table class="table table-sm">
        <thead>
            <tr><th>Customer</th><th>Check-in</th><th>Check-out</th></tr>
        </thead>
        <tbody>
            @foreach (var b in Model.Bookings)
            {
                <tr>
                    <td>@b.Customer?.Name</td>
                    <td>@b.DateFrom?.ToShortDateString()</td>
                    <td>@b.DateTo?.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No bookings yet.</p>
}

<a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>