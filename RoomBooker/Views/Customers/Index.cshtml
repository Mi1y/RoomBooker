@model IEnumerable<Customer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Customer | RoomBooker";
}


<h2> Customers </h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Add new Customer</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Bookings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Bookings.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>